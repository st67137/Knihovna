<Window x:Class="KnihovnaZoldak.PobockyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Knihovny" Height="220" Width="360" ResizeMode="NoResize">
    <Grid>
        <Label Content="Název" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,20,0,0"/>
        <TextBox Name="textBoxNazev" HorizontalAlignment="Left" VerticalAlignment="Top" Width="180" Margin="140,25,0,0" Text="{Binding NazevPobocky}"/>
        <Label Content="Adresa" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,60,0,0"/>
        <TextBox Name="textBoxAdresa" HorizontalAlignment="Left" VerticalAlignment="Top" Width="180" Margin="140,65,0,0" Text="{Binding AdresaPobocky}"/>
        <Label Content="Kontakt" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,100,0,0"/>
        <TextBox Name="textBoxKontakt" HorizontalAlignment="Left" VerticalAlignment="Top" Width="180" Margin="140,105,0,0" Text="{Binding TelefonPobocky}"/>
        <Button Content="OK" Name="buttonOk" HorizontalAlignment="Left" VerticalAlignment="Top" Width="80" Height="20" Margin="140,140,0,0" Command="{Binding OkCommand}"/>
        <Button Content="Cancel" Name="buttonCancel" HorizontalAlignment="Left" VerticalAlignment="Top" Width="80" Height="20" Margin="240,140,0,0" Command="{Binding CancelCommand}"/>
    </Grid>
</Window>
