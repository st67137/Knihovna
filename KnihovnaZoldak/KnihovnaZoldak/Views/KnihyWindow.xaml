<Window x:Class="KnihovnaZoldak.KnihyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KnihyForm" Height="220" Width="360" ResizeMode="NoResize">
    <Grid>
        <Label Content="Název" HorizontalAlignment="Left" Margin="30,20,0,0" VerticalAlignment="Top"/>
        <Label Content="Počet stran" HorizontalAlignment="Left" Margin="30,60,0,0" VerticalAlignment="Top"/>
        <Label Content="Počet knih" HorizontalAlignment="Left" Margin="30,100,0,0" VerticalAlignment="Top"/>

        <TextBox Name="textBoxNazev" HorizontalAlignment="Left" Margin="140,25,0,0" VerticalAlignment="Top" Width="180" Text="{Binding NazevKnihy}"/>
        <TextBox Name="textBoxStrany" HorizontalAlignment="Left" Margin="140,65,0,0" VerticalAlignment="Top" Width="180" Text="{Binding StranyKnihy}"/>
        <TextBox Name="textBoxPocet" HorizontalAlignment="Left" Margin="140,105,0,0" VerticalAlignment="Top" Width="180" Text="{Binding PocetKnih}"/>

        <Button Content="OK" HorizontalAlignment="Left" Margin="140,140,0,0" VerticalAlignment="Top" Width="80" Height="20" Command="{Binding OkCommand}"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="240,140,0,0" VerticalAlignment="Top" Width="80" Height="20" Command="{Binding CancelCommand}"/>

    </Grid>
</Window>
